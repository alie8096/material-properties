% Filename: mytheme.sty

\ProvidesPackage{mytheme}

\mode<presentation>{
    % Define color palette
    \definecolor{myblue}{RGB}{0, 102, 204}
    \definecolor{myorange}{RGB}{255, 102, 0}
    \definecolor{mygray}{RGB}{96, 96, 96}

    % Set the beamer color theme
    \setbeamercolor{title}{fg=myblue}
    \setbeamercolor{frametitle}{bg=myblue, fg=white}
    \setbeamercolor{structure}{fg=myblue}
    \setbeamercolor{item}{fg=myorange}
    \setbeamercolor{block title}{bg=myblue, fg=white}
    \setbeamercolor{block body}{bg=mygray!20, fg=black}

    % Set the beamer font theme
    \setbeamerfont{title}{series=\bfseries, size=\LARGE}
    \setbeamerfont{frametitle}{series=\bfseries, size=\large}
    \setbeamerfont{block title}{series=\bfseries, size=\large}

    % Set other beamer themes
    \useinnertheme{rounded}
    \useoutertheme{infolines}
    \usefonttheme{serif}
}

\mode<all>
\endinput
